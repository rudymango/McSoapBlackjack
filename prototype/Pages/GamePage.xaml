<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="prototype.Pages.GamePage"
             Title="McSoap's Blackjack">

    <!-- Game View -->

    <Grid RowDefinitions="250, 100, 250"
          ColumnDefinitions="250, *, 250"
          RowSpacing="10"
          ColumnSpacing="10"
          BackgroundColor="DarkGreen">

        <!-- Information on Dealer's Hand -->
        
        <Label Grid.Row="0"
               Grid.Column="0"
               BackgroundColor="Gray"
               Text="Dealer's Hand: 10"
               FontSize="Subtitle"
               HorizontalTextAlignment="Center"
               VerticalTextAlignment="Center"/>

        <!--Dealer's Hand-->

        <HorizontalStackLayout Grid.Row="0"
                               Grid.Column="1"
                               Padding="25"
                               HorizontalOptions="Center">

            <Image Source="backcard.png" />
            <Image Source="tenspades.png" />

        </HorizontalStackLayout>

        <!-- Decorative Drawing Deck -->

        <HorizontalStackLayout Grid.Row="0"
                               Grid.Column="2"
                               Padding="25"
                               HorizontalOptions="Center">

            <Image Source="backcard.png"/>

        </HorizontalStackLayout>

        <!-- Player's Money (Starts at 100) -->

        <Label Grid.Row="1"
               Grid.Column="0"
               Text="Your Money: $1000"
               FontSize="Subtitle"
               Background="Green"
               HorizontalTextAlignment="Center"
               VerticalTextAlignment="Center"/>

        <!-- Betting Selection Display or Pot Display-->

        <Label Grid.Row="1"
               Grid.Column="1"
               Text="Game Information"
               FontSize="Subtitle"
               Background="Green"
               HorizontalTextAlignment="Center"
               VerticalTextAlignment="Center"/>

        <!-- Filler -->

        <Label Grid.Row="1"
               Grid.Column="2"
               BackgroundColor="Gray"/>

        <!-- Value of player's hand -->

        <Label Grid.Row="2"
               Grid.Column="0"
               Text="Your Hand: 20"
               FontSize="Subtitle"
               Background="Gray"
               HorizontalTextAlignment="Center"
               VerticalTextAlignment="Center"/>

        <!--Player's Hand-->

        <HorizontalStackLayout Grid.Row="2"
                               Grid.Column="1"
                               Padding="25"
                               HorizontalOptions="Center">

            <CollectionView>

            </CollectionView>

        </HorizontalStackLayout>

        <!-- Game Selection -->

        <VerticalStackLayout Grid.Row="2"
                             Grid.Column="2"
                             Spacing="10"
                             Padding="25"
                             BackgroundColor="Green">

            <Button Grid.Row="2"
                    Grid.Column="2"
                    BackgroundColor="Blue"
                    Text="Hit"
                    HorizontalOptions="Center"
                    MinimumWidthRequest="200"/>

            <Button Grid.Row="2"
                    Grid.Column="2"
                    BackgroundColor="Blue"
                    Text="Stand"
                    HorizontalOptions="Center"
                    MinimumWidthRequest="200"/>

        </VerticalStackLayout>
    </Grid>

</ContentPage>
