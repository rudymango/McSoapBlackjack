<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="prototype.Pages.LoginPage">

    <ScrollView BackgroundColor="DarkGreen">

        <VerticalStackLayout
            Spacing="25"
            Padding="30"
            VerticalOptions="Center"
            HorizontalOptions="CenterAndExpand"

            BackgroundColor="Green">

            <Label Text="Login" FontSize="Title" HorizontalTextAlignment="Center" FontAttributes="Bold" TextColor="White"/>

            <Entry Text="username" TextColor="Black" Background="White"/>

            <Entry Text="password" TextColor="Black" Background="white"/>

            <HorizontalStackLayout Spacing="10">

                <Button Text="Login" TextColor="White" Background="Black"/>
                <Button Text="Signup" TextColor="White" Background="Black"/>

            </HorizontalStackLayout>

            <Button Text="Play as Guest" FontAttributes="Italic" Pressed="ToGamePage" TextColor="White" Background="Black"/>

            <Button Text="Leaderboard" TextColor="White" Background="Black"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
